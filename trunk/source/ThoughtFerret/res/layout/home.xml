<?xml version="1.0" encoding="utf-8"?>
<TableLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/homeBackground"
	>
	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
		<LinearLayout
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			android:padding="10dp"
   			>
	   		<Button
	   			android:layout_width="fill_parent"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="1"
	   			android:gravity="center"
	   			android:text="@string/homeUpdate"
	   			android:textColor="#FF000000"
	   			android:textSize="18sp"
	   			android:padding="0dp"
	   			android:layout_margin="0dp"
	   			android:background="@drawable/homebutton"
	   			android:onClick="updateClick"
	   			/>
	   	</LinearLayout>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
  	</TableRow>
 	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
		<LinearLayout
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			android:padding="10dp"
   			>
	   		<Button
	   			android:layout_width="fill_parent"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="1"
	   			android:gravity="center"
	   			android:text="@string/homeGraph"
	   			android:textColor="#FF000000"
	   			android:textSize="18sp"
	   			android:padding="0dp"
	   			android:layout_margin="0dp"
	   			android:background="@drawable/homebutton"
	   			android:onClick="graphClick"
	   			/>
	   	</LinearLayout>
	</TableRow>
	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		>
		<LinearLayout
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			android:padding="10dp"
   			>
	   		<Button
	   			android:layout_width="fill_parent"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="1"
	   			android:gravity="center"
	   			android:text="@string/homeWords"
	   			android:textColor="#FF000000"
	   			android:textSize="18sp"
	   			android:padding="0dp"
	   			android:layout_margin="0dp"
	   			android:background="@drawable/homebutton"
	   			android:onClick="wordsClick"
	   			/>
	   	</LinearLayout>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
	</TableRow>
	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
		<LinearLayout
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			android:padding="10dp"
   			>
	   		<Button
	   			android:layout_width="fill_parent"
	   			android:layout_height="fill_parent"
	   			android:layout_weight="1"
	   			android:gravity="center"
	   			android:text="@string/homePreferences"
	   			android:textColor="#FF000000"
	   			android:textSize="18sp"
	   			android:padding="0dp"
	   			android:layout_margin="0dp"
	   			android:background="@drawable/homebutton"
	   			android:onClick="preferencesClick"
	   			/>
	   	</LinearLayout>
   		<View
   			android:layout_width="fill_parent"
   			android:layout_height="fill_parent"
   			android:layout_weight="1"
   			/>
	</TableRow>
</TableLayout> 
    
