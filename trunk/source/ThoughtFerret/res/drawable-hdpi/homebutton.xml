<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#99DDAA66"
                android:endColor="#AADDAA00"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="#FF000000"
                />
            <corners
                android:radius="10dp"
                />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
    <item>        
        <shape>
            <solid
                android:color="#55DDDDDD"
                />
            <stroke
                android:width="1dp"
                android:color="#FF000000"
                />
            <corners
                android:radius="10dp"
                />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp"
                />
        </shape>
    </item>
</selector>
